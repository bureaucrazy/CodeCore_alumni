<%= simple_form_for @profile do |f| %>
  <%= f.input :pitch, label: "Pitch", placeholder: '140 characters Pitch' %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :phone, label: "Phone" %>
  <%= f.input :email, label: "Email" %>
  <%= f.input :location, label: "Location", placeholder: 'e.g. Vancouver, BC, Canada' %>
  <%= f.input :availability, inline_label: 'I am Available for hire! :)' %>
  <%= f.input :image, label: "Photo" %>
  <%= f.button :submit, "Submit", class: "btn btn-info" %>
<% end %>